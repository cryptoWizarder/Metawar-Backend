{
  "name": "@metawar/backend",
  "version": "1.0.0",
  "description": "The backend of MetaWar game",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "prisma generate && node .",
    "lint": "eslint .",
    "logs": "docker logs -f app",
    "clean": "rimraf dist bundle.min.*",
    "build": "swc ./src -d dist -s true --copy-files",
    "build:watch": "swc ./src -d dist -w",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "db:restart": "npm run db:stop && npm run db:start",
    "db:start": "docker compose --env-file .empty.env --file db-cluster.yaml up --detach",
    "db:stop": "docker compose --env-file .empty.env --file db-cluster.yaml down",
    "format": "prettier --write src/**/*.ts && npm run lint -- --fix",
    "generate:certs": "./scripts/certs.generate.sh",
    "prebuild": "npm run clean"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "@sendgrid/mail": "^8.0.0",
    "@trpc/server": "^10.44.1",
    "@types/request-ip": "^0.0.41",
    "agenda": "^5.0.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "lodash": "^4.17.21",
    "minimatch": "^9.0.3",
    "morgan": "^1.10.0",
    "nunjucks": "^3.2.4",
    "request-ip": "^3.3.0",
    "trpc-playground": "^1.0.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@swc-node/register": "^1.6.8",
    "@swc/cli": "0.1.63",
    "@swc/core": "^1.3.100",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/debug": "^4.1.12",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/morgan": "^1.9.9",
    "@types/nunjucks": "^3.2.6",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "prisma": "^5.6.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "aliases": {
    "~": "dist"
  }
}
